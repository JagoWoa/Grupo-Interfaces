# ============================================
# Configuración de Base de Datos - Supabase
# ============================================

# URL del proyecto en Supabase
SUPABASE_URL=https://tu-proyecto.supabase.co

# Clave anónima (pública) para acceso desde el cliente
SUPABASE_ANON_KEY=tu_clave_anonima_aqui

# ============================================
# Configuración de Seguridad
# ============================================

# Número máximo de intentos de login fallidos antes de bloqueo
AUTH_MAX_FAILED_ATTEMPTS=5

# Tiempo de bloqueo en segundos después de exceder intentos fallidos
AUTH_LOCKOUT_SECONDS=60

# ============================================
# Ambiente
# ============================================

# Ambiente de ejecución (development, production)
NODE_ENV=development
